<div class="row justify-content-lg-center g-3">
  <h1><%= title %> Contact</h1>

  <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
    <div class="input-group mb-3">
      <span class="input-group-text" id="name">Full Name</span>
      <input
        id="name"
        type="text"
        class="form-control"
        placeholder="Full Name"
        aria-label="Full Name"
        aria-describedby="Full Name"
        name="name"
        value="<%= item.FullName %>"
        required
      />
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text" id="email">Email Address</span>
      <input
        id="email"
        type="text"
        class="form-control"
        placeholder="Email Address"
        aria-label="Email Address"
        aria-describedby="Email Address"
        name="email"
        value="<%= item.EmailAddress %>"
        required
      />
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text" id="contact">Contact Number</span>
      <input
        id="contact"
        type="text"
        class="form-control"
        placeholder="Contact Number"
        aria-label="Contact Number"
        aria-describedby="Contact Number"
        name="contact"
        value="<%= item.ContactNumber %>"
        required
      />
    </div>

    <button type="submit" class="btn btn-primary" id="editButton">
      <i class="fas fa-edit fa-lg"></i> Edit
    </button>
  </form>
</div>
